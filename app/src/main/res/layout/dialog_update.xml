<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ez="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/guide_bg_white">

            <ImageView
                android:id="@+id/pic"
                android:layout_width="wrap_content"
                android:layout_height="290dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/guide_bg_pic"
                tools:ignore="ContentDescription" />

            <com.red.assistant.view.EZProgressBar
                android:id="@+id/progress"
                style="@style/ProgressBar.Update"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_below="@+id/pic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:clickable="false"
                ez:textSize="18sp"/>

            <Button
                android:id="@+id/update"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_below="@+id/pic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@android:color/holo_red_light"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="点击升级"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/update"
                android:layout_centerHorizontal="true"
                android:background="@color/white" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/transparent"
            android:src="@drawable/guide_btn_close"
            tools:ignore="ContentDescription" />

    </RelativeLayout>
</RelativeLayout>