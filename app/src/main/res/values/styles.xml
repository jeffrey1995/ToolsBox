<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="UpdateDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal"></style>

    <style name="ProgressBar.Update" parent="ProgressBar">
        <item name="android:progressDrawable">@drawable/widget_progressbar</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:maxHeight">35dp</item>
    </style>
</resources>
